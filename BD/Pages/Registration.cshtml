@page
@model BD.Pages.RegistrationModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Login&Registration.css">
}

<body>
    <div class="form-cont">
        <section class="form-container">
            @* <img src="pictures/BackgroundBlack.jpg" class="img-Background"> *@
            <h1>Регистрация</h1>
            <form method="post" action="/register" class="registration-form">
                <div class="error-message"></div>

                <label>Имя пользователя</label>
                <input type="text" id="username" name="Username">

                <label>Пароль</label>
                <input type="password" id="password" name="PasswordHash">

                <label>Подтвердите пароль</label>
                <input type="password" id="confirm-password" name="ConfirmPassword">

                <button type="submit" class="submit">Зарегистрироваться</button>
                <div class="redirect-link">Есть аккаунт? <a href="Login">Войти</a></div>
                
            </form>
        </section>
    </div>
    <script src="js/OptionRegistration.js"></script>
</body>
