@model BD.Pages.AddMaterialModel
@{
	ViewBag.Title = "Добавление материала";
	Layout = "Shared/_Layout.cshtml";
}
<body>
	<form method="post">
		<label>Материал<input required name="Name" id="NameMat"/></label><br/>
		<button type="submit">Добавить материал</button>
		@if (Model.Message.Count != 0)
		{
			<p>@Model.Message[0]</p>
		}
	</form>
	
